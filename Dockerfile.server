FROM node:22
RUN apt-get update && apt-get install -y openssh-server

RUN npm config set prefix /home/node/.npm-global
ENV PATH=/home/node/.npm-global/bin:$PATH
RUN npm install -g @vibe-kit/grok-cli@latest @google/gemini-cli@latest @anthropic-ai/claude-code@latest

RUN mkdir /var/run/sshd
RUN echo 'root:password' | chpasswd
RUN sed -i 's/#PermitRootLogin prohibit-password/PermitRootLogin yes/' /etc/ssh/sshd_config
RUN sed -i 's/#PasswordAuthentication no/PasswordAuthentication no/' /etc/ssh/sshd_config

# Copy authorized_keys file (to be mounted at runtime)
COPY authorized_keys /root/.ssh/authorized_keys

EXPOSE 22
CMD ["/usr/sbin/sshd", "-D"]